{
	"name": "coloreme",
	"description": "Suite of color combinations for using in your projects",
	"version": "1.0.3",
	"license": "MIT",
	"author": "Rushan Alyautdinov <akgondber@gmail.com>",
	"homepage": "https://github.com/akgondber/coloreme",
	"repository": "akgondber/coloreme",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "vitest",
		"lint": "prettier . --check",
		"prtf": "prettier --write .",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"prettier": {
		"useTabs": true,
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5"
	},
	"module": "dist/coloreme.esm.js",
	"size-limit": [
		{
			"path": "dist/coloreme.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/coloreme.esm.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@size-limit/preset-small-lib": "^11.0.2",
		"@types/lodash.keyby": "^4.6.9",
		"@types/lodash.random": "^3.2.9",
		"husky": "^9.0.11",
		"prettier": "^3.2.5",
		"size-limit": "^11.0.2",
		"tsdx": "^0.14.1",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vitest": "^1.3.1"
	},
	"dependencies": {
		"lodash.keyby": "^4.6.0",
		"lodash.random": "^3.2.0"
	},
	"keywords": [
		"color",
		"colorize",
		"colors",
		"combinations",
		"combo",
		"design",
		"pairs",
		"palette",
		"suite",
		"theme",
		"tool"
	]
}
